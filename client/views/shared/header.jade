template(name='Header')
  header
    nav
      div.nav-wrapper.primaryColor

        a(href='{{pathFor "home"}}')
          img(src='/img/idealab.jpg' style='height: 75%; margin-top: 10px;padding-left: 20px')

        ul.right
          if currentUser
            .nav-commands.center
              a(style='text-align: center; font-size: 170%') {{myBalance}}
            li
              a(class='waves-effect waves-light btn', id='logout') Logout

          else
            li
              a(class='waves-effect waves-light btn', id='login', href='{{pathFor "login"}}') Login
